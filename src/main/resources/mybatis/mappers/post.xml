<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace= "post">
	<select id="selectPostCnt" parameterType="int" resultType="int">
		<![CDATA[
			select count(*) as postCnt
			from post
			where cateno = #{cateNo}
		]]>
	</select>
	
	<select id="selectPostList" parameterType="int" resultType="PostVo">
		<![CDATA[
			select postno,
			       cateno,
			       posttitle,
			       postcontent,
			       reg_date as regDate
			from post
			where cateNo= #{cateNo}	
			order by postno desc
		]]>
	</select>
	
	<insert id="insertPost" parameterType="PostVo">
		<![CDATA[
			insert into post
			values(seq_post_no.nextval,
			       #{cateNo},
			       #{postTitle},
			       #{postContent},
			       sysdate)			
			       
		]]>
	
	</insert>
	<select id="selectOnePost" parameterType="int" resultType="PostVo">
		<![CDATA[
			select postno,
			       cateno,
			       posttitle,
			       postcontent,
			       reg_date as regDate
			from post
			WHERE postno = #{postNo}		
		]]>
	</select>
	
</mapper>